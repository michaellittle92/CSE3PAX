@page
@model CSE3PAX.Pages.Admin.CreateUserModel
@{
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <!-- Settings Title -->
            <h1 class="my-5 admin-txt text-center">
                <i class="bi bi-people-fill admin-txt"></i> Create User
            </h1>

            <!-- Create User Form -->
            <form method="post">
                <!-- First Name -->
                <div class="mb-3">
                    <label for="firstName" class="form-label">First Name:</label>
                    <input type="text" id="firstName" name="firstName" required class="form-control" />
                </div>
                <!-- Last Name -->
                <div class="mb-3">
                    <label for="lastName" class="form-label">Last Name:</label>
                    <input type="text" id="lastName" name="lastName" required class="form-control" />
                </div>
                <!-- Email -->
                <div class="mb-3">
                    <label for="email" class="form-label">Email:</label>
                    <input type="text" id="email" name="email" required class="form-control" />
                </div>
                <!-- Password -->
                <div class="mb-3">
                    <label for="password" class="form-label">Password:</label>
                    <input type="password" id="password" name="password" required class="form-control" />
                </div>
                <!-- Radio buttons for user selection -->
                <div>
                    <input asp-for="IsAdmin" id="IsAdmin" name="IsAdmin" class="form-check-input" />
                    <label for="IsAdmin"> Administrator</label>
                    <br />

                    <input asp-for="IsManager" id="IsManager" name="IsManager" class="form-check-input" />
                    <label for="IsManager"> Manager</label>
                    <br />

                    <input asp-for="IsLecturer" id="IsLecturer" name="IsLecturer" class="form-check-input" />
                    <label for="IsLecturer"> Lecturer</label>
                    <br />
                </div>
                <!-- Lecturer work hours and expertise Options -->
                <div id="lecturerFieldsDiv" class="mt-3">
                    <div class="mb-3">
                        <label for="workHours" class="form-label">Work Hours:</label>
                        <input type="text" id="workHours" name="workHours" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label for="expertise01" class="form-label">Expertise 01:</label>
                        <select id="expertise01" name="expertise01" class="form-select">
                            <option value=""></option>
                            @foreach (var classification in Model.SubjectClassifications)
                            {
                                <option value="@classification">@classification</option>
                            }
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="expertise02" class="form-label">Expertise 02:</label>
                        <select id="expertise02" name="expertise02" class="form-select">
                            <option value=""></option>
                            @foreach (var classification in Model.SubjectClassifications)
                            {
                                <option value="@classification">@classification</option>
                            }
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="expertise03" class="form-label">Expertise 03:</label>
                        <select id="expertise03" name="expertise03" class="form-select">
                            <option value=""></option>
                            @foreach (var classification in Model.SubjectClassifications)
                            {
                                <option value="@classification">@classification</option>
                            }
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="expertise04" class="form-label">Expertise 04:</label>
                        <select id="expertise04" name="expertise04" class="form-select">
                            <option value=""></option>
                            @foreach (var classification in Model.SubjectClassifications)
                            {
                                <option value="@classification">@classification</option>
                            }
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="expertise05" class="form-label">Expertise 05:</label>
                        <select id="expertise05" name="expertise05" class="form-select">
                            <option value=""></option>
                            @foreach (var classification in Model.SubjectClassifications)
                            {
                                <option value="@classification">@classification</option>
                            }
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="expertise06" class="form-label">Expertise 06:</label>
                        <select id="expertise06" name="expertise06" class="form-select">
                            <option value=""></option>
                            @foreach (var classification in Model.SubjectClassifications)
                            {
                                <option value="@classification">@classification</option>
                            }
                        </select>
                    </div>
                </div>

                <!-- Button container  -->
                <div class="d-flex p-3 justify-content-center">
                    <!-- Save / Cancel Buttons -->
                    <div class="d-flex flex-wrap align-items-center">
                        <button type="submit" class="btn btn-primary mx-5 box-shw my-2" onclick="createUserSubmit()" style="width:130px;"><i class="bi bi-save2 me-2"></i>Submit</button>
                        <button type="button" class="btn btn-outline-danger box-shw mx-5 my-2" onclick="goBack()" style="width:130px;"><i class="bi bi-x-circle-fill me-3"></i>Cancel</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="~/js/CreateUser.js"></script>
<script src="~/js/site.js"></script>