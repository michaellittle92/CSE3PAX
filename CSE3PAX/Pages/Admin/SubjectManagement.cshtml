@page
@model CSE3PAX.Pages.Admin.SubjectManagementModel
@{
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>"Subject Management"</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.7.2/font/bootstrap-icons.min.css">
</head>



<body>
    <!-- Page Heading-->
    <h1 class="admin-txt my-4">Subject Management</h1>
    <p>This page allows users the ability to oversee, modify, and maintain the list of subjects available,<br />
       providing a platform for managing subjects within the system</p>

    <!-- Add Subject - heading & button -->
    <div class="mx-4">
        <h4 class="admin-txt mt-4">Add Subject</h4>
        <a href="/Admin/CreateSubject" class="btn btn-success box-shw"><i class="bi bi-journal-plus  me-1 pe-1"></i>Add Subject</a>
    </div>

    <!-- Subject container -->
    <div class="container-fluid py-5">
        <form method="post">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card mb-4">
                        <div class="card-body box-shw">
                            <div class="text-center">
                                <h4 class="my-3 listHeading">Subjects</h4>
                            </div>

                            <!-- View Subjects Button -->
                            <div class="mb-4">
                                <form method="post">
                                    <button type="submit" name="buttonType" value="subjects" class="btn btn-primary box-shw">View Subjects</button>
                                </form>
                            </div>

                            <!-- WIP -->
                            <!-- View Subjects List -->
                            <div class="table-responsive">
                                @if (Model.Subjects.Any())
                                {
                                    <table class="table table-striped table-hover table-bordered border-2 align-middle m-1 col-12">
                                        <thead>
                                            <tr class="text-center align-middle bg-secondary box-shw text-light">
                                                <th scope="col">Subject ID</th>
                                                <th scope="col">Subject Name</th>
                                                <th scope="col">Year Level</th>
                                                <th scope="col">Development Difficulty</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var subject in Model.Subjects)
                                            {
                                                <tr>
                                                    <td>@subject.SubjectId</td>
                                                    <td>@subject.SubjectName</td>
                                                    <td>@subject.YearLevel</td>
                                                    <td>@subject.DevelopmentDifficulty</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
    
    <!-- Page Heading-->
    <h1 class="admin-txt my-4">Subject Instance Management</h1>
    <p>This section allows users the ability to oversee, manage, and maintain<br />
        the list of subject instances for each subject</p>

    <!-- Add Subject Instance - heading & button -->
    <div class="mx-4">
        <h4 class="admin-txt">Add Subject Instance</h4>
        <a href="/Admin/CreateSubject" class="btn btn-success box-shw"><i class="bi bi-plus-circle mx-1 pe-1"></i>Add Instance</a>
    </div>
    <div class="container-fluid py-5">
        <form method="post">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card mb-4">
                        <div class="card-body box-shw">
                            <div class="text-center">
                                <h4 class="my-3 listHeading">Subject Instances</h4>
                            </div>

                            <div class="mb-4">
                                <form method="post">
                                    <button type="submit" name="buttonType" value="subjects" class="btn btn-primary box-shw">View Instances</button>
                                </form>
                            </div>

                            <div class="table-responsive">
                                @if (Model.SubjectInstances.Any())
                                {
                                    <table class="table table-striped col-12">
                                        <thead>
                                            <tr>
                                                <th scope="col">Subject Instance ID</th>
                                                <th scope="col">Subject ID</th>
                                                <th scope="col">Instance Name</th>
                                                <th scope="col">Instance Code</th>
                                                <th scope="col">Lecturer ID</th>
                                                <th scope="col">Start Date</th>
                                                <th scope="col">End Date</th>
                                                <th scope="col">Year</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var subject in Model.SubjectInstances)
                                            {
                                                <tr>
                                                    <td>@subject.SubjectInstanceId</td>
                                                    <td>@subject.SubjectId</td>
                                                    <td>@subject.SubjectInstanceName</td>
                                                    <td>@subject.SubjectInstanceCode</td>
                                                    <td>@subject.LectureId</td>
                                                    <td>@subject.StartDate</td>
                                                    <td>@subject.EndDate</td>
                                                    <td>@subject.SubjectInstanceYear</td>
                                                    <td>
                                                        <div class="d-flex gap-2">
                                                            <a href="#" class="btn btn-primary btn-sm"><i class="bi bi-pencil-fill"></i></a>
                                                            <a href="#" class="btn btn-danger btn-sm"><i class="bi bi-trash-fill"></i></a>
                                                        </div>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</body>