@page
@model CSE3PAX.Pages.Admin.SubjectManagementModel
@{
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>"Subject Management"</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.7.2/font/bootstrap-icons.min.css">
</head>

<body>
    <div class="mx-3">
        <!-- Page Heading-->
        <h1 class="admin-txt my-4 mx-3"><i class="bi bi-book pe-3"></i>Subject Management</h1>
        <p class="mx-3">This page allows users the ability to oversee, modify, and maintain the list of subjects available, providing a platform for managing subjects within the system</p>

        <!-- Add Subject - heading & button -->
        <div class="mx-2 my-3">
            <h4 class="admin-txt mt-4">Add Subject</h4>
            <a href="/Admin/CreateSubject" class="btn btn-success box-shw my-1"><i class="bi bi-journal-plus mx-1 pe-1"></i>Add Subject</a>
        </div>

        <div class="container-fluid py-5" style="max-height: 900px; overflow-y: auto;">
            <form method="post">
                <div class="row" style="max-height: 900px; overflow-y: auto;">
                    <div class="col-lg-12">
                        <div class="card mb-4">
                            <div class="card-body box-shw">
                                <div class="text-center">
                                    <h4 class="my-3 listHeading">Subjects</h4>
                                </div>
                                <!-- View Subjects Button -->
                                <div class="button-container">
                                    <div class="mb-3">
                                        <form method="post">
                                            <button type="submit" name="buttonType" value="subjects" class="btn btn-dark box-shw"><i class="bi bi-eye mx-1 pe-1"></i>View Subjects</button>
                                        </form>
                                    </div>
                                    <!-- Hide Subjects button -->
                                    <div class="mb-3">
                                        <form method="post">
                                            <button type="submit" name="buttonType" value="hideSubjects" class="btn btn-dark box-shw"><i class="bi bi-eye mx-1 pe-1"></i>Hide Subjects</button>
                                        </form>
                                    </div>
                                </div>
                                <!-- Subjects Table -->
                                <div class="table-responsive">
                                    @if (Model.Subjects.Any())
                                    {
                                        <table class="table table-striped table-hover table-bordered border-2 align-middle m-1">
                                            <thead>
                                                <tr class="text-center align-middle bg-secondary box-shw text-light">
                                                    <th scope="col">Subject Code</th>
                                                    <th scope="col">Subject Name</th>
                                                    <th scope="col">Subject Classification</th>
                                                    <th scope="col">Year Level</th>
                                                    <th scope="col">Actions</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var subject in Model.Subjects)
                                                {
                                                    <tr>
                                                        <td class="text-center">@subject.SubjectCode</td>
                                                        <td class="text-center">@subject.SubjectName</td>
                                                        <td class="text-center">@subject.SubjectClassification</td>
                                                        <td class="text-center">@subject.YearLevel</td>
                                                        <td class="text-center col-1">
                                                            <div>
                                                                <a href="/Admin/EditSubject?SubjectCode=@subject.SubjectCode" class="btn btn-info btn-sm box-shw"><i class="bi bi-pencil-fill"></i></a>
                                                            </div>
                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>


        <!-- Subject Instance Section-->
        <h1 class="admin-txt my-4 mx-3"><i class="bi bi-journal-text pe-3"></i>Subject Instance Management</h1>
        <p class="mx-3">This section allows users the ability to oversee, manage, and maintain the list of subject instances for each subject</p>

        <!-- Add Subject Instance - heading & button -->
        <div class="mx-4">
            <h4 class="admin-txt mt-4">Add Subject Instance</h4>
            <a href="/Manager/CreateSubjectInstance" class="btn btn-success box-shw"><i class="bi bi-plus-circle mx-1 pe-1"></i>Add Instance</a>
        </div>
        <div class="container-fluid py-5" style="max-height: 900px; overflow-y: auto;">
            <form method="post">
                <div class="row" style="max-height: 900px; overflow-y: auto;">
                    <div class="col-lg-12">
                        <div class="card mb-4">
                            <div class="card-body box-shw">
                                <div class="text-center">
                                    <h4 class="my-3 listHeading">Subject Instances</h4>
                                </div>
                                <!-- View Subject Instances Button -->
                                <div class="button-container">
                                    <div class="mb-3">
                                        <form method="post">
                                            <button type="submit" name="buttonType" value="subjectInstances" class="btn btn-dark box-shw"><i class="bi bi-eye mx-1 pe-1"></i>View Instances</button>
                                        </form>
                                    </div>
                                    <!-- Hide subject instances button -->
                                    <div class="mb-3">
                                        <form method="post">
                                            <button type="submit" name="buttonType" value="hideSubjectInstances" class="btn btn-dark box-shw"><i class="bi bi-eye mx-1 pe-1"></i>Hide Instances</button>
                                        </form>
                                    </div>
                                </div>
                                <!-- Subject Instances Table -->
                                <div class="table-responsive">
                                    @if (Model.SubjectInstances.Any())
                                    {
                                        <table class="table table-striped table-hover table-bordered border-2 align-middle m-1">
                                            <thead>
                                                <tr class="text-center align-middle bg-secondary box-shw text-light">
                                                    <th scope="col">Subject Instance Name</th>
                                                    <th scope="col">Subject Instance Code</th>
                                                    <th scope="col">Lecturer</th>
                                                    <th scope="col">Start Date</th>
                                                    <th scope="col">End Date</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var subjectInstance in Model.SubjectInstances)
                                                {
                                                    <tr>
                                                        <td class="text-center">@subjectInstance.SubjectInstanceName</td>
                                                        <td class="text-center">@subjectInstance.SubjectInstanceCode</td>
                                                        <td class="text-center">@subjectInstance.LecturerFirstName @subjectInstance.LecturerLastName</td>
                                                        <td class="text-center">@subjectInstance.StartDate.ToString("MMMM dd, yyyy")</td>
                                                        <td class="text-center">@subjectInstance.EndDate.ToString("MMMM dd, yyyy")</td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>

    </div>
</body>