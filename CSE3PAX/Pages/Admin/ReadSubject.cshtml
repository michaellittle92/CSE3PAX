@page
@model CSE3PAX.Pages.Admin.ReadSubjectModel
@{
}

<!-- HTML Table -->
<table>
    <thead>
       <tr>
            <th>Subject Code</th>
            <th>Subject Name</th>
            <th>Subject Classifcation</th>
            <th>Year Level</th>
            <th>Edit</th>

        </tr>
    </thead>
    <tbody>
        <!-- Iterate over each subject in the model's list of subjects -->
        @foreach (var subject in Model.ListSubjects)
                {
                    <tr>
                        <td>@subject.SubjectCode</td>
                        <td>@subject.SubjectName</td>
                        <td>@subject.SubjectClassification</td>
                        <td>@subject.YearLevel</td>
                        <td><a href="/Admin/EditSubject?SubjectCode=@subject.SubjectCode" class="btn btn-outline-primary btn-sm">Edit</a>
                    </tr>
                }
    </tbody>
</table>