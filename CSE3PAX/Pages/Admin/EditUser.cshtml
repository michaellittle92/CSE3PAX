@page
@model CSE3PAX.Pages.Admin.EditUserModel
@{
    if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="alert alert-success" role="alert">
            @Model.SuccessMessage
        </div>
    }
}

<!-- Container -->
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <!-- Edit Title -->
            <h1 class="my-5 admin-txt text-center"> <i class="bi bi-pencil-fill admin-txt pe-3"></i>Edit User</h1>

            
            <!-- Edit User Form -->
            <form method="post">
                <!-- User ID -->
                <div class="mb-3">
                    <label class="form-label" asp-for="UserId">User ID</label>
                    <input class="form-control" asp-for="UserId" readonly />
                </div>

                <!-- Email  -->
                <div class="mb-3">
                    <label class="form-label" asp-for="Email">Email</label>
                    <input class="form-control" asp-for="Email" />
                </div>

                <!-- First Name -->
                <div class="mb-3">
                    <label class="form-label" asp-for="FirstName">First Name</label>
                    <input class="form-control" asp-for="FirstName" />
                </div>

                <!-- Last Name -->
                <div class="mb-3">
                    <label class="form-label" asp-for="LastName">Last Name</label>
                    <input class="form-control" asp-for="LastName" />
                </div>
          
             <!-- Buttons Flex Container -->
            <div class="d-flex justify-content-center mt-4">
                
                <!-- Save Button - User Details -->
                    <button type="submit" class="btn btn-success mx-4 box-shw my-2" style="width:130px;"><i class="bi bi-save2 me-2"></i>Save</button>
            </form>

            <!-- Cancel Button -->
            <a asp-page="/Admin/StaffManagement" class="btn btn-outline-danger mx-4 box-shw my-2" style="width:130px;"><i class="bi bi-x-circle-fill me-3"></i>Cancel</a>
           
            <!-- Delete Button Form -->
            <form method="post" asp-page-handler="Delete" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this user?')">
                <input type="hidden" asp-for="Email" />
                <input type="hidden" asp-for="UserId" />
                <button type="submit" class="btn btn-danger mx-4 box-shw my-2" style="width:130px;"><i class="bi bi-trash pe-3"></i>Delete</button>
            </form>
        </div>

        <!-- Reset Password Section -->
        <div class="container">
            <div class="row justify-content-center">

                <!-- New form for Reset Password action -->
                <form method="post" asp-page-handler="ResetPassword">
                    <div class="mb-3 my-3">
                        <label asp-for="Password">New Password</label>
                        <input asp-for="Password" type="password" class="form-control " style="width: 100%;" />
                    </div>

                    <input type="hidden" asp-for="UserId" />
                    <button type="submit" class="btn btn-secondary box-shw">Reset Password</button>
                </form>
            </div>
        </div>
    </div>
</div>


