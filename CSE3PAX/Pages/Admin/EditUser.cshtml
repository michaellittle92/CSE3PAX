@page
@model CSE3PAX.Pages.Admin.EditUserModel
@{
    if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="alert alert-success" role="alert">
            @Model.SuccessMessage
        </div>
    }
}

<!-- Container -->
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <!-- Edit Title -->
            <h1 class="my-5 admin-txt text-center"> <i class="bi bi-pencil-fill admin-txt pe-3"></i>Edit User</h1>

            
            <!-- Edit User Form -->
            <form method="post">

                <!-- Hidden field for IsLecturer -->
                <input type="hidden" asp-for="IsLecturer" />

                <!-- User ID -->
                <div class="mb-3">
                    <label class="form-label" asp-for="UserId">User ID</label>
                    <input class="form-control" asp-for="UserId" readonly />
                </div>

                <!-- Email  -->
                <div class="mb-3">
                    <label class="form-label" asp-for="Email">Email</label>
                    <input class="form-control" asp-for="Email"/>
                </div>

                <!-- First Name -->
                <div class="mb-3">
                    <label class="form-label" asp-for="FirstName">First Name</label>
                    <input class="form-control" asp-for="FirstName" pattern="[a-zA-Z]+" title="First Name must only contain letters." />
                </div>

                <!-- Last Name -->
                <div class="mb-3">
                    <label class="form-label" asp-for="LastName">Last Name</label>
                    <input class="form-control" asp-for="LastName" pattern="[a-zA-Z]+" title="Last Name must only contain letters." />
                </div>

                @if(@Model.IsLecturer){
                <div class="mb-3">
                    <label class="form-label" asp-for="Expertise01">Expertise 01</label>
                        <input class="form-control" asp-for="Expertise01" pattern="[a-zA-Z ]+" title="Expertise must only contain letters." />
                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="Expertise02">Expertise 02</label>
                        <input class="form-control" asp-for="Expertise02" pattern="[a-zA-Z ]+" title="Expertise must only contain letters." />
                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="Expertise03">Expertise 03</label>
                        <input class="form-control" asp-for="Expertise03" pattern="[a-zA-Z ]+" title="Expertise must only contain letters." />
                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="Expertise04">Expertise 04</label>
                        <input class="form-control" asp-for="Expertise04" pattern="[a-zA-Z ]+" title="Expertise must only contain letters." />
                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="Expertise05">Expertise 05</label>
                        <input class="form-control" asp-for="Expertise05" pattern="[a-zA-Z ]+" title="Expertise must only contain letters." />
                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="Expertise06">Expertise 06</label>
                        <input class="form-control" asp-for="Expertise06" pattern="[a-zA-Z ]+" title="Expertise must only contain letters." />
                </div>

                    <div class="mb-3">
                        <label class="form-label" asp-for="WorkHours">Work Hours</label>
                        <input class="form-control" asp-for="WorkHours" type="number" min="1" max="38" pattern="\d+" title="Please enter an integer between 1 and 38." />
                    </div>
                }
          
             <!-- Buttons Flex Container -->
            <div class="d-flex flex-wrap justify-content-center mt-4">

                    
                
                <!-- Save Button - User Details -->
                    <button type="submit" class="btn btn-success mx-4 box-shw my-2" style="width:130px;"><i class="bi bi-save2 me-2"></i>Save</button>
            </form>

            <!-- Cancel Button -->
            <a asp-page="/Admin/StaffManagement" class="btn btn-outline-danger mx-4 box-shw my-2" style="width:130px;"><i class="bi bi-x-circle-fill me-3"></i>Cancel</a>
           
            <!-- Delete Button Form -->
            <form method="post" asp-page-handler="Delete" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this user?')">
                <input type="hidden" asp-for="Email" />
                <input type="hidden" asp-for="UserId" />
                <button type="submit" class="btn btn-danger mx-4 box-shw my-2" style="width:130px;"><i class="bi bi-trash pe-3"></i>Delete</button>
            </form>
        </div>

        <!-- Reset Password Section -->
        <div class="container">
            <div class="row justify-content-center">
                <!-- New form for Reset Password action -->
                <form method="post" asp-page-handler="ResetPassword" id="resetPasswordForm">
                    <div class="mb-3">
                        <label for="Password">Password</label>
                        <input type="password" class="form-control" id="Password" name="Password">
                        <div id="passwordHelp" class="form-text text-danger"></div>
                    </div>
                    <button type="submit" class="btn btn-secondary">Reset Password</button>
                </form>
            </div>
        </div>
    </div>
</div>


<script src="~/js/password.js"></script>