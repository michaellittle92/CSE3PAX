@page
@model CSE3PAX.Pages.Admin.EditUserModel

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <!-- Edit Title -->
            <h1 class="my-5 admin-txt"> <i class="bi bi-pencil-fill admin-txt pe-3"></i>Edit User</h1>

            <!-- Edit User Form -->
            <form method="post">
                <!-- User ID -->
                <div class="mb-3">
                    <label class="form-label" asp-for="UserId">User ID</label>
                    <input class="form-control" asp-for="UserId" readonly />
                </div>

                <!-- Email  -->
                <div class="mb-3">
                    <label class="form-label" asp-for="Email">Email</label>
                    <input class="form-control" asp-for="Email" />
                </div>

                <!-- First Name -->
                <div class="mb-3">
                    <label class="form-label" asp-for="FirstName">First Name</label>
                    <input class="form-control" asp-for="FirstName" />
                </div>

                <!-- Last Name -->
                <div class="mb-3">
                    <label class="form-label" asp-for="LastName">Last Name</label>
                    <input class="form-control" asp-for="LastName" />
                </div>

                <!-- Submit Button -->
                <div class="d-flex p-3 justify-content-between">
                    <button type="submit" class="btn btn-primary btn-lg mx-3 box-shw" style="width:250px;">Submit</button>
                    <button type="button" class="btn btn-outline-danger box-shw" style="width:250px;" onclick=" goBack()">Cancel</button>
                </div>
            </form>

            <!-- New form for Delete action -->
            <form method="post" asp-page-handler="Delete" onsubmit="return confirm('Are you sure you want to delete this user?');">
                <input type="hidden" asp-for="Email" />
                <button type="submit">Delete User</button>
            </form>
            <!-- New form for Reset Password action -->
            <form method="post" asp-page-handler="ResetPassword">
                <!-- New password input field (visible by default) -->
                <div>
                    <label asp-for="Password">New Password</label>
                    <input asp-for="Password" type="password" />
                </div>
                <input type="hidden" asp-for="UserId" />
                <button type="submit">Reset Password</button>
            </form>
        </div>
    </div>
</div>

<script src="~/js/site.js"></script>
