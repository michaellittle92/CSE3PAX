@page
@model CSE3PAX.Pages.Admin.EditUserModel

<div>
    <div>
        <div>
            <h1>Edit User</h1>
            <form method="post">
                <div>
                    <label asp-for="UserId">User ID</label>
                    <input asp-for="UserId" readonly />
                </div>
                <div>
                    <label asp-for="Email">Email</label>
                    <input asp-for="Email" />
                </div>
                <div>
                    <label asp-for="FirstName">First Name</label>
                    <input asp-for="FirstName" />
                </div>
                <div>
                    <label asp-for="LastName">Last Name</label>
                    <input asp-for="LastName" />
                </div>

                <div>
                    <button type="submit">Submit</button>
                    <button type="button" onclick="goBack()">Cancel</button>
                </div>
            </form>
            <!-- New form for Delete action -->
            <form method="post" asp-page-handler="Delete" onsubmit="return confirm('Are you sure you want to delete this user?');">
                <input type="hidden" asp-for="Email" />
                <button type="submit">Delete User</button>
            </form>
            <!-- New form for Reset Password action -->
            <form method="post" asp-page-handler="ResetPassword">
                <!-- New password input field (visible by default) -->
                <div>
                    <label asp-for="Password">New Password</label>
                    <input asp-for="Password" type="password" />
                </div>
                <input type="hidden" asp-for="UserId" />
                <button type="submit">Reset Password</button>
            </form>
        </div>
    </div>
</div>
