@page
@model CSE3PAX.Pages.Admin.EditSubjectModel
@{
}
<form method="post">
<div class="form-group">
        <label class="form-label" asp-for="SubjectCode">Subject Code</label>
        <input class="form-control" asp-for="SubjectCode" readonly />
    </div>
    <div class="form-group">
<label class="form-label" asp-for="SubjectName">Subject Name</label>
        <input class="form-control" asp-for="SubjectName" />
       </div>
<div class="form-group">
<label class="form-label" asp-for="SubjectClassification">Subject Classification</label>
        <input class="form-control" asp-for="SubjectClassification" />
       </div>

<div class="form-group">
<label class="form-label" asp-for="YearLevel">Year Level</label>
        <input class="form-control" asp-for="YearLevel" />
       </div>
</div>
    <button type="submit">Save</button>
    <a asp-page="/Admin/ReadSubject">Cancel</a>
</form>

<!-- Separate form for delete action -->
<form method="post" asp-page-handler="Delete" style="margin-top: 20px;">
    <input type="hidden" asp-for="SubjectCode" />
    <button type="submit"  onclick="return confirm('Are you sure you want to delete this subject?');">Delete</button>
</form>