@page
@model CSE3PAX.Pages.Admin.AdminIndexModel
@{
}

<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>


<body>
<!-- ---------- MAIN SECTION ---------- -->
  <main >
    <div class="container-fluid p-0">
        <div class="row text-white">

            <!-- Welcome container - for small, medium and large screen sizes -->
            <div class="col-lg-5 mx-lg-5 col-md col-sm my-2 flex-grow-1  mx-1 mx-lg-0 m-3 box-shw admin-ble bd-radius d-flex">
                    
                <!-- Headings -->
                <div class="p-4 d-flex align-items-center">
                    <h2 style="text-shadow: 5px 5px 5px rgba(0,0,0,0.53);">Welcome @Model.FullName</h2>
                </div>

            </div>

            <!-- Noification Section -->
            <div class="col-lg mx-lg-3 my-2 col-md-5 col-sm my-2 mx-1 bd-radius box-shw bg-white">
                <div class="py-3 gry-txt overflow-hidden">
                        
                    <!-- Notification Heading -->
                    <h6 class="mb-3">Notifications / Messages</h6>

                    <!-- Notification item 1 -->
                    <div class="d-flex align-items-center my-2">
                        
                        <!-- Image -->
                        <img src="/images/kitten.png" alt="Profile Image" class="profile-img rounded-circle img-fluid" style="width: 50px; height: 50px;" />
                        
                        <!-- Text Content -->
                        <div class="flex-grow-1 mr-3">
                            <h6 class="txt-gry text-sm my-0 mx-2"><strong>Andrew Wilson</strong></h6> 
                            <p class="text-sm my-0 mx-2 overflow-hidden">"Request for update"</p>                                
                        </div>
                       
                        <!-- Arrow icon -->
                        <div>
                            <i class="bi bi-arrow-right-circle-fill admin-txt"></i>
                        </div>
                    </div>

                    <!-- Notification item 2 -->
                    <div class="d-flex align-items-center">
                        
                        <!-- Image -->
                        <img src="/images/dog.png" alt="Profile Image" class="profile-img rounded-circle img-fluid" style="width: 50px; height: 50px;" />
                        
                        <!-- Text Content -->
                        <div class="flex-grow-1 mr-3">
                                <h6 class="txt-gry text-sm my-0 mx-2"><strong>Heather Garcia</strong></h6>

                                <p class="text-sm my-0 mx-2 notification">"Hi Jane, is there a possibility that we can catch up later,to discuss this mornings meeting and workout a timeline for the current project."</p>
                        </div>
                        
                        <!-- Arrow icon -->
                        <div>
                            <i class="bi bi-arrow-right-circle-fill admin-txt"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

            <div class="welcome-message-container my-4 gry-txt mx-lg-5 flex-wrap">
            <p class="fs-6">Step into Latrobe's comprehensive platform, tailored to managing subjects, staff, and schedules. Utilise insightful tools to navigate the academic administration with confidence.</p>
        </div>

        <!-- Line Separator -->
        <div class="row">
            <div class="col">
                <hr class="underline">
                <h4 class="availability-status">Staff Scheduling Status</h4>
             </div>
        </div>


            <!-- Dougnut container -->
            <div class="row align-items-start">
                <div class="col-md-6">
                    <div class="doughnut-chart-container">
                        <!-- Doughnut -->
                        <canvas id="availabilityChart" class="doughnut" style="width:500px"></canvas>
                    </div>
            </div>

            <!-- Table & View button -->
            <div class="col-md-6">
                <div class="mb-4 mx-3">
                    <form method="post">
                        <button type="submit" name="buttonType" value="users" class="btn btn-dark box-shw my-1 pe-3" style="width:130px;"><i class="bi bi-eye mx-1 pe-1"></i>View</button>
                    </form>
                </div>


                    <div class="col card me-5 box-shw p-3">
                        
                        <h4 class="my-3 listHeading text-center">Lecturer Workloads</h4>

                        <!--Display data from sql database -->
                    @if (Model.Users.Any())
                    {
                        <table id="lecturerWorkloadsTable" class="table table-striped table-hover table-bordered border-2 align-middle m-1">
                            <thead>
                                <tr class="text-center align-middle bg-secondary box-shw text-light">
                                    <th scope="col">User ID</th>
                                    <th scope="col">First Name</th>
                                    <th scope="col">Last Name</th>
                                    <th scope="col">Current Load</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var user in Model.Users)
                                {
                                    <tr>
                                        <td class="text-center">@user.UserId</td>
                                            <td>@user.FirstName</td>
                                <td>@user.LastName</td>
                                <td class="text-center">@user.ConcurrentLoadCapacity</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                </div>
            </div>
        </div>
    </div>
</main>

    <!-- Bootstrap CSS and other imports -->
    <!-- Chart.js library -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <!-- jQuery, Popper.js, Bootstrap JS -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <!-- custom JavaScript file -->
    <script src="/js/adminIndex.js"></script>

</body>