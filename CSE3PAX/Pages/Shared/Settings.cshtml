@page
@model CSE3PAX.Pages.Shared.SettingsModel
@{
}
<!-- Bootstrap CSS -->
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />


<div class="container">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-10 col-xl-8 mx-auto">
            
            <!-- Settings Title -->
            <h1 class="mb-5" style="color: #3163bc"><i class="bi bi-gear" style="color: #3163bc"></i> Settings</h1>
            <div class="my-4">
                
                <!-- Display Settings Section -->
                <div class="mb-5 pb-5 border-bottom border-gray">
                    <h5 class="mb-0 mt-5" style="color: black">Display Settings</h5> 
                    <p>Customize how the interface is displayed.</p>
                    
                    <div class="list-group mb-5 shadow">
                        <!-- Theme Option -->
                        <div class="list-group-item">
                            <div class="row align-items-center">
                                <div class="col">
                                    <strong class="mb-2">Theme</strong>
                                                                      
                                    <!-- Light Theme Radio Button -->
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="theme" id="lightTheme" value="light" checked>
                                        <label class="form-check-label" for="lightTheme">Light</label>
                                    </div>

                                    <!-- Dark Theme Radio Button -->
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="theme" id="darkTheme" value="dark">
                                        <label class="form-check-label" for="darkTheme">Dark</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- Font Size Option -->
                        <div class="list-group-item">
                            <div class="row align-items-center">
                                <div class="col">
                                    <strong class="mb-2">Font Size</strong>
                                    <!-- Small Font Size Radio Button -->
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="fontSize" id="small" value="small">
                                        <label class="form-check-label" for="small">Small</label>
                                    </div>
                                    <!-- Medium Font Size Radio Button -->
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="fontSize" id="medium" value="medium" checked>
                                        <label class="form-check-label" for="medium">Medium</label>
                                    </div>
                                    <!-- Large Font Size Radio Button -->
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="fontSize" id="large" value="large">
                                        <label class="form-check-label" for="large">Large</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Security Settings Section -->
                <div class="mb-5 pb-5 border-bottom border-gray">
                    <h5 class="mb-0 mt-5" style="color: black">Security Settings</h5> 
                    <p>Configure security-related options.</p>
                    <div class="list-group mb-5 shadow">
                        <!-- Change Password Option -->
                        <div class="list-group-item">
                            <div class="row align-items-center">
                                <div class="col">
                                    <strong class="mb-2">Change Password</strong>
                                    <p>Update your password.</p>
                                </div>
                                <div class="col-auto">
                                    <button class="btn btn-primary">Change</button>
                                </div>
                            </div>
                        </div>
                        <!-- Account Recovery Option -->
                        <div class="list-group-item">
                            <div class="row align-items-center">
                                <div class="col">
                                    <strong class="mb-2">Account Recovery</strong>
                                    <p>Add/Update email address and phone number for account recovery.</p>
                                </div>
                                <div class="col-auto">
                                    <button class="btn btn-primary">Manage</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Save Changes Button -->
                <button class="btn btn-primary">Save Changes</button>
            </div>
        </div>
    </div>
</div>


<script>
    // Checks the radio button state and apply selected themes
    function applyTheme() {
        var darkThemeRadio = document.getElementById('darkTheme'); // Access dark radio button
        var lightThemeRadio = document.getElementById('lightTheme'); // Access light radio button

        // If statement - checks if dark theme radio is selected
        if (darkThemeRadio.checked) {
            document.body.classList.add('dark-theme'); // Applies dark theme
            document.body.classList.remove('light-theme'); // Removes light theme
        } 
        // Else If - when light theme radio button is selected, do the opposite
        else if (lightThemeRadio.checked) {
            document.body.classList.add('light-theme');
            document.body.classList.remove('dark-theme');
        }
    }

    // Set radio button event listeners to trigger theme change on selection
    document.getElementById('lightTheme').addEventListener('change', applyTheme);
    document.getElementById('darkTheme').addEventListener('change', applyTheme);

    applyTheme(); // Apply initial theme based on the radio button that is checked by default
</script>