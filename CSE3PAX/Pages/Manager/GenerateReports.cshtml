@page
@model CSE3PAX.Pages.Manager.GenerateReportsModel
@{
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>"Generate Reports"</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.7.2/font/bootstrap-icons.min.css">
</head>
<body>
    <div class="container-fluid py-5">
        <h1 class="mb-3" style="color: #3163bc"><i class="bi bi-file-earmark-bar-graph-fill pe-3"></i> Generate Reports</h1>
        <p class="my-4">Looking to gain deeper insights? Generate your comprehensive reports for Lecturers, Subject instances, and subjects here</p>
        <form method="post">
            <div class="row" style="max-height: 900px; overflow-y: auto;">
                <div class="col-lg-12">
                    <div class="card mb-4">
                        <div class="card-body box-shw">
                            <div class="text-center">
                                <h4 class="my-3 listHeading">Lecturers</h4>
                            </div>
                            <div class="mb-3">
                                <button type="submit" name="buttonType" value="lecturers" class="btn btn-dark box-shw"><i class="bi bi-eye mx-1 pe-1"></i>View Lecturers</button>
                                <button type="submit" name="buttonType" value="hideLecturers" class="btn btn-dark box-shw"><i class="bi bi-eye mx-1 pe-1"></i>Hide Lecturers</button>
                            </div>
                            <div class="table-responsive">
                                @if (Model.Lecturers.Any())
                                {
                                    <table class="table table-hover table-striped col-12 border-2 align-middle m-1">
                                        <thead>
                                            <tr class="text-center align-middle bg-secondary box-shw text-light">
                                                <th scope="col">First Name</th>
                                                <th scope="col">Last Name</th>
                                                <th scope="col">Email</th>
                                                <th scope="col">Exp 1</th>
                                                <th scope="col">Exp 2</th>
                                                <th scope="col">Exp 3</th>
                                                <th scope="col">Exp 4</th>
                                                <th scope="col">Exp 5</th>
                                                <th scope="col">Exp 6</th>
                                                <th scope="col">Work Hours</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var lecturer in Model.Lecturers)
                                            {
                                                <tr>
                                                    <td class="text-center">@lecturer.FirstName</td>
                                                    <td class="text-center">@lecturer.LastName</td>
                                                    <td class="text-center">@lecturer.Email</td>
                                                    <td class="text-center">@lecturer.Expertise01</td>
                                                    <td class="text-center">@lecturer.Expertise02</td>
                                                    <td class="text-center">@lecturer.Expertise03</td>
                                                    <td class="text-center">@lecturer.Expertise04</td>
                                                    <td class="text-center">@lecturer.Expertise05</td>
                                                    <td class="text-center">@lecturer.Expertise06</td>
                                                    <td class="text-center">@lecturer.WorkHours</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row" style="max-height: 900px; overflow-y: auto;">
                <div class="col-lg-12">
                    <div class="card mb-4">
                        <div class="card-body box-shw">
                            <div class="text-center">
                                <h4 class="my-3 listHeading">Subject Instances</h4>
                            </div>
                            <div class="mb-3">
                                <button type="submit" name="buttonType" value="subjectInstances" class="btn btn-dark box-shw"><i class="bi bi-eye mx-1 pe-1"></i>View Instances</button>
                                <button type="submit" name="buttonType" value="hideSubjectInstances" class="btn btn-dark box-shw"><i class="bi bi-eye mx-1 pe-1"></i>Hide Instances</button>
                            </div>
                            <div class="table-responsive">
                                @if (Model.SubjectInstances.Any())
                                {
                                    <table class="table table-hover table-striped col-12 border-2 align-middle m-1">
                                        <thead>
                                            <tr class="text-center align-middle bg-secondary box-shw text-light">
                                                <th scope="col">Instance Name</th>
                                                <th scope="col">Instance Code</th>
                                                <th scope="col">Lecturer ID</th>
                                                <th scope="col">Start Date</th>
                                                <th scope="col">End Date</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var subjectInstance in Model.SubjectInstances)
                                            {
                                                <tr>
                                                    <td class="text-center">@subjectInstance.SubjectInstanceName</td>
                                                    <td class="text-center">@subjectInstance.SubjectInstanceCode</td>
                                                    <td class="text-center">@subjectInstance.LecturerFirstName @subjectInstance.LecturerLastName</td>
                                                    <td class="text-center">@subjectInstance.StartDate.ToString("MMMM dd, yyyy")</td>
                                                    <td class="text-center">@subjectInstance.EndDate.ToString("MMMM dd, yyyy")</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</body>
</html>