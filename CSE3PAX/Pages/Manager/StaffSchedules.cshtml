@page
@model CSE3PAX.Pages.Manager.StaffSchedulesModel
@{
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>"Staff Schedules"</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.7.2/font/bootstrap-icons.min.css">
</head>
<body>
    <div class="container-fluid py-5">
        <div class="row">
            <div class="col-lg-4">
                <div class="card mb-4">
                    <div class="card-body text-center">
                        <h4 class="my-3">Schedule Management</h4>
                        <div class="container d-flex justify-content-center">
                            <form method="post">
                                <div class="mb-3">
                                    <div class ="mb-3">
                                        <label for="lecturer" class="form-label">Select a Lecturer:</label>
                                    </div>
                                    <select name="selectedUserId" id="lecturer" class="form-select">
                                        <option value="">@((Model.SelectedUserId == 0) ? "Select a Lecturer" : $"{Model.SelectedFirstName} {Model.SelectedLastName}")</option>
                                        @foreach (var lecturer in Model.Lecturers)
                                        {
                                            <option value="@lecturer.UserId">@($"{lecturer.FirstName} {lecturer.LastName}")</option>
                                        }
                                    </select>
                                </div>
                                <div class="mb-3">
                                    <button type="submit" class="btn btn-primary">Submit</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-8">
                <div class="card mb-4">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">User ID</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@Model.SelectedUserId</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Full Name</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@Model.SelectedFirstName @Model.SelectedLastName</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Email</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@Model.SelectedEmail</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Current Workload</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@Model.SelectedConcurrentLoadCapacity</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Expertise 01</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@Model.SelectedExpertise01</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Expertise 02</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@Model.SelectedExpertise02</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Expertise 03</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@Model.SelectedExpertise03</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Expertise 04</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@Model.SelectedExpertise04</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Expertise 05</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@Model.SelectedExpertise05</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Expertise 06</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@Model.SelectedExpertise06</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="card mb-4">
                    <div class="card-body">
                        <h4 class="my-3">Schedule</h4>
                        <br>
                        <br>
                        <br>
                        <br>
                        <br>
                        <br>
                        <br>
                        <br>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
