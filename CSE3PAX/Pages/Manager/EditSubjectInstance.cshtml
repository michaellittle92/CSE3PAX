@page
@model CSE3PAX.Pages.Manager.EditSubjectInstanceModel

@{
    ViewData["Title"] = "Edit Subject Instance";
}

<h2>@ViewData["Title"]</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="SubjectInstanceId" class="control-label"></label>
        <input asp-for="SubjectInstanceId" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="SubjectId" class="control-label"></label>
        <input asp-for="SubjectId" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="SubjectInstanceName" class="control-label"></label>
        <input asp-for="SubjectInstanceName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="SubjectInstanceCode" class="control-label"></label>
        <input asp-for="SubjectInstanceCode" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="LecturerId" class="control-label"></label>
        <input asp-for="LecturerId" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="StartDate" class="control-label"></label>
        <input asp-for="StartDate" class="form-control" type="date" />
    </div>
    <div class="form-group">
        <label asp-for="EndDate" class="control-label"></label>
        <input asp-for="EndDate" class="form-control" type="date" />
    </div>
    <div class="form-group">
        <label asp-for="SubjectInstanceYear" class="control-label"></label>
        <input asp-for="SubjectInstanceYear" class="form-control" type="number" />
    </div>
    <div class="form-group">
        <label asp-for="Load" class="control-label"></label>
        <input asp-for="Load" class="form-control" type="number" step="0.01" />
    </div>
    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>